%table.table
  %thead
    %tr
      %th Data utworzenia
      %th Nazwa pliku
      %th Rozmiar
      %th Link
  %tbody
    - @attachments.each do |attachment|
      %tr
        %td= attachment.created_at.to_date
        %td= attachment.name
        %td= attachment.size
        %td= link_to 'Pobierz', attachment.file
